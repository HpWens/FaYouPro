<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_origin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="28dp"
            android:text="来源：澎湃新闻"
            android:textColor="@color/color_b2b2b2"
            android:textSize="12sp"></TextView>

        <TextView
            android:id="@+id/tv_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="28dp"
            android:text="原作者：大钢铁"
            android:textColor="@color/color_b2b2b2"
            android:textSize="12sp"></TextView>

    </LinearLayout>


    <com.fy.fayou.view.flow.FlowLayout
        android:id="@+id/flow_tag"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:layout_marginRight="15dp">

    </com.fy.fayou.view.flow.FlowLayout>


    <LinearLayout
        android:id="@+id/praise_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="28dp"
        android:orientation="horizontal">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_avatar_first"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@mipmap/ic_avatar_default"
            app:civ_border_color="@color/color_ffffff"
            app:civ_border_width="2dp">

        </de.hdodenhof.circleimageview.CircleImageView>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_avatar_second"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="-5dp"
            android:src="@mipmap/ic_avatar_default"
            app:civ_border_color="@color/color_ffffff"
            app:civ_border_width="2dp">

        </de.hdodenhof.circleimageview.CircleImageView>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_avatar_three"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="-5dp"
            android:src="@mipmap/ic_avatar_default"
            app:civ_border_color="@color/color_ffffff"
            app:civ_border_width="2dp">

        </de.hdodenhof.circleimageview.CircleImageView>

        <TextView
            android:id="@+id/tv_praise_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:text="5012个点赞"
            android:textColor="@color/color_b2b2b2"
            android:textSize="12sp"></TextView>

    </LinearLayout>


    <ImageView
        android:id="@+id/iv_praise"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/article_praise_selector"></ImageView>


</LinearLayout>