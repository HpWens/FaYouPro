<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_thumb"
        android:layout_width="160dp"
        android:layout_height="90dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="15dp"
        android:background="#ed4512"
        android:scaleType="centerCrop"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"></ImageView>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="15dp"
        android:background="@color/color_e5e5e5"
        app:layout_constraintTop_toBottomOf="@+id/iv_thumb"></View>

    <TextView
        android:id="@+id/tv_content"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="2dp"
        android:layout_marginRight="18dp"
        android:ellipsize="end"
        android:maxLines="2"
        android:textColor="@color/color_000000"
        android:textSize="16sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/iv_thumb"
        app:layout_constraintTop_toTopOf="@+id/iv_thumb"
        tools:text="中美合作是大势所趋美 国豁免437项中国政…"></TextView>


    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="4dp"
        android:textColor="@color/color_b3b3b3"
        android:textSize="11sp"
        app:layout_constraintBottom_toBottomOf="@+id/iv_thumb"
        app:layout_constraintRight_toLeftOf="@+id/iv_thumb"
        tools:text="2019-9-20">

    </TextView>

    <LinearLayout
        android:id="@+id/label_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="4dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="@+id/iv_thumb"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/tv_time">

        <TextView
            android:id="@+id/tv_origin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="加拿大法务部"
            android:textColor="@color/color_6a78bc"
            android:textSize="11sp"></TextView>

        <View
            android:layout_width="0.5dp"
            android:layout_height="9dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@color/color_666666"></View>

        <TextView
            android:id="@+id/tv_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="交通法"
            android:textColor="@color/color_666666"
            android:textSize="11sp"></TextView>


    </LinearLayout>


</android.support.constraint.ConstraintLayout>