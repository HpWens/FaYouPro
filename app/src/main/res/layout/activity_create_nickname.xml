<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_ffffff">

    <ImageView
        android:id="@+id/iv_avatar"
        android:layout_width="110dp"
        android:layout_height="100dp"
        android:layout_marginTop="86dp"
        android:scaleType="centerInside"
        android:src="@mipmap/ic_avatar_default"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"></ImageView>

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginRight="10dp"
        android:src="@mipmap/person_edit_small_photo"
        app:layout_constraintBottom_toBottomOf="@+id/iv_avatar"
        app:layout_constraintRight_toRightOf="@+id/iv_avatar"></ImageView>


    <EditText
        android:id="@+id/et_nickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:background="@null"
        android:hint="请输入你的昵称"
        android:maxLength="10"
        android:minWidth="100dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:textColor="@color/color_333333"
        android:textColorHint="@color/color_d2d2d2"
        android:textSize="14sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_avatar"></EditText>

    <View
        android:id="@+id/view_line"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="67.5dp"
        android:layout_marginRight="67.5dp"
        android:background="@color/color_e5e5e5"
        app:layout_constraintTop_toBottomOf="@+id/et_nickname"></View>

    <Button
        android:id="@+id/btn_go"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginTop="72dp"
        android:background="@drawable/bg_btn_login_selected"
        android:text="进入法友"
        android:textColor="@color/color_ffffff"
        android:textSize="16dp"
        app:layout_constraintLeft_toLeftOf="@+id/view_line"
        app:layout_constraintRight_toRightOf="@+id/view_line"
        app:layout_constraintTop_toBottomOf="@+id/view_line" />

    <TextView
        android:id="@+id/tv_after"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:paddingTop="7dp"
        android:paddingBottom="7dp"
        android:text="以后再说"
        android:textColor="@color/color_a0a0a0"
        android:textSize="12sp"
        app:layout_constraintLeft_toLeftOf="@+id/btn_go"
        app:layout_constraintRight_toRightOf="@+id/btn_go"
        app:layout_constraintTop_toBottomOf="@+id/btn_go"></TextView>


</android.support.constraint.ConstraintLayout>